<%= link_to 'Quick Look', lookup_quick_look_path %>
<h1>Listing books</h1>
<h2>Accounting</h2>
  <% if !@accounting.nil? %>
    <% @accounting.each do |f| %>
      <ul>
        <li><h3><%=link_to f.number, subject_path(f.course,f.number)%></h3></li>
      </ul>
    <% end %>
  <% end %>
<h2>Biology</h2>
  <% if !@biology.nil? %>
    <% @biology.each do |f| %>
      <ul>

        <li><h3><%=link_to f.number, subject_path(f.course.downcase,f.number)%></h3></li>
      </ul>
    <% end %>
  <% end %>
<h2>Music</h2>
  <% if !@music.nil? %>
    <% @music.each do |f| %>
      <ul>

        <li><h3><%=link_to f.number, subject_path(f.course,f.number)%></h3></li>
      </ul>
    <% end %>
  <% end %>



<table>
  <thead>
    <tr>
      <th>Course</th>
      <th>Number</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.course %></td>
        <td><%= book.number %></td>
        <td><%= link_to 'Show', book %></td>
        <td><%= link_to 'Edit', edit_book_path(book) %></td>
        <td><%= link_to 'Destroy', book, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Book', new_book_path %>
