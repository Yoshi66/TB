<div class="center hero-unit">
<h3>Search by Book Name</h3>
<%= form_tag books_path, :method => 'get' do %>
  <p>
    <%= text_field_tag :search, params[:search], placeholder:"Title/Isbn/Course" %>
    <%= submit_tag "Search", :name => nil %>
  </p>
<% end %>

<h1>Listing books</h1>
<% if !@store.nil? %>
  <% @store.each_with_index do |b, i|%>
    <% if i != 0 %>
    <h2 style="font-size: 34px; color:black;"><%= b.course unless @store[0..i-1].map(&:course).include?"#{b.course}" %></h2>
    <% else %>
      <h2 style="font-size: 34px; color:black;"><%= b.course %></h2>
    <% end %>
      <li><h4><%=link_to "#{b.course} #{b.number}", subject_path(b.course,b.number)%></h4></li>
  <% end %>
<% end %>
</div>
